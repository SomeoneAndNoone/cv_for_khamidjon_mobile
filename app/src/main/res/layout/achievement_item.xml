<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="13dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#A68001">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/achiev_iv_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/white"
            android:src="@drawable/hamidjon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/achiev_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Hello guys how are you"
                android:paddingTop="7dp"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/achiev_tv_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="14dp"
                android:paddingTop="5dp"
                android:textSize="15sp"
                android:textColor="@color/colorAccent"
                android:text="codingwithmitch.com"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/achiev_tv_backg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgr_change"
        android:layout_margin="2dp"/>

</androidx.cardview.widget.CardView>