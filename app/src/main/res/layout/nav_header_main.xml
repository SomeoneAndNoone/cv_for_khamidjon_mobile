<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:background="@color/colorPrimary">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_my_img_drawer"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/my_circle_image"
        android:contentDescription="@string/full_name"/>

    <TextView
        android:id="@+id/tv_full_name_drawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/full_name"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/iv_my_img_drawer"
        app:layout_constraintLeft_toLeftOf="@id/iv_my_img_drawer"
        app:layout_constraintRight_toRightOf="@id/iv_my_img_drawer"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="20sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>




























