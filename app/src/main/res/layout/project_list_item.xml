<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_marginBottom="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="7dp"
        app:cardElevation="7dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/white"
        android:foreground="?attr/selectableItemBackground"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/projects_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center_horizontal"
                android:text="Project #1"
                android:textColor="@color/colorAccent"
                android:textSize="26sp"/>

            <TextView
                android:id="@+id/projects_tv_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/project_dummy_des"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/projects_tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="January 2020"
                android:gravity="end"
                android:paddingEnd="15dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="7dp"
        app:cardElevation="7dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/white"
        android:foreground="?attr/selectableItemBackground"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

            <Button
                android:id="@+id/projects_btn_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                android:background="@android:color/transparent"
                android:text="@string/go_to_app"
                android:textColor="@color/colorPrimary"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:focusable="true"
        android:clickable="true"
        app:cardBackgroundColor="@color/white"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="7dp"
        app:cardElevation="7dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

            <Button
                android:id="@+id/projects_btn_source_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                android:background="@android:color/transparent"
                android:text="@string/go_to_source_code"
                android:textColor="@color/colorPrimary"/>

    </androidx.cardview.widget.CardView>


</LinearLayout>




















